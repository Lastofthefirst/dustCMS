{
  "name": "dustcms",
  "version": "1.0.0",
  "description": "Multi-tenant CMS with dynamic content modeling",
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/main.ts",
    "dev": "bun run --hot src/main.ts",
    "dev:css": "tailwindcss -i ./src/styles/input.css -o ./static/css/output.css --watch",
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./static/css/output.css --minify",
    "setup": "bun run src/main.ts setup",
    "build": "bun run build:css && ./build.sh",
    "test": "bun test tests/unit tests/integration && playwright test",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:e2e": "bun test tests/e2e",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:browser": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "dependencies": {
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/html": "^1.0.0",
    "@elysiajs/static": "^1.0.0",
    "elysia": "^1.1.0",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "bun-types": "latest",
    "daisyui": "^4.12.24",
    "tailwindcss": "^3.4.18"
  }
}
